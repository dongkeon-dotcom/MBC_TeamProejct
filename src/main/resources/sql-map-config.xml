<configuration>
  <settings>
    <setting name="mapUnderscoreToCamelCase" value="true"/>
  </settings>
  
  <typeAliases>      
    <typeAlias alias="UserVO"  type="com.mbcTeam.user.UserVO" />  
    <typeAlias alias="ProductVO"  type="com.mbcTeam.product.ProductVO" />
    <typeAlias alias="OrderVO"  type="com.mbcTeam.order.OrderVO" />
    <typeAlias alias="CartVO"  type="com.mbcTeam.cart.CartVO" />
    
  
       <typeAlias alias="OrderedVO"  type="com.mbcTeam.shop.OrderedVO" />
              <typeAlias alias="DeliveryVO"  type="com.mbcTeam.shop.DeliveryVO" />
        <typeAlias alias="ReviewVO"  type="com.mbcTeam.user.ReviewVO" />
         <typeAlias alias="ReviewImageVO"  type="com.mbcTeam.user.ReviewImageVO" />
    
  </typeAliases>
  
  <mappers>    
    <mapper resource="mappings/user-mapping.xml"  />
    <mapper resource="mappings/product-mapping.xml"  />
    <mapper resource="mappings/order-mapping.xml"  />
    <mapper resource="mappings/cart-mapping.xml"  />
       <mapper resource="mappings/ordered-mapping.xml"  />
         <mapper resource="mappings/ordered-mapping.xml"  />
          <mapper resource="mappings/review-mapping.xml"  />
